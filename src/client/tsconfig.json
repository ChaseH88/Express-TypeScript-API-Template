{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "/"
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "config"
  ]
}