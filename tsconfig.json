{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "ES2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "config"
  ]
}